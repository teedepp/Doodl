<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.almasb.paint.roomPaintController">
   <top>
      <VBox>
         <children>
            <ToolBar>
               <items>
                  <HBox alignment="CENTER" spacing="5">
                     <children>
                        <TextField fx:id="brushSize" text="18" />
                        <ColorPicker fx:id="colorPicker" />
                        <CheckBox fx:id="eraser" text="Eraser" />
                     </children>
                  </HBox>
               </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
   <center>
      <Canvas fx:id="canvas" height="600" width="600" />
   </center>
</BorderPane>
